<p id="notice"><%= notice %></p>


<style>
body, h1, h2, h3, h4, h5, h6, p{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

h1, h2, h3, h4, h5, h6{

}
p, li{

}
body{
  background-color: #555;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

ul{
  margin: 0;
}
.main{
  padding: 1em;
  max-width: 375px;
  width: 100%;
  min-width: 260px;
  margin: 1em auto;
  background-color: #fdf6ee;
  border-radius: 8px;
  border: #fff solid 2px;
  box-sizing: border-box;
}

.main .video{
  max-width: 600px;
  width: 100%;
  min-width: 280px;
}

.main .title {
  display: flex;
  flex-wrap: wrap;
  flex-flow: row;
  justify-content: space-between;
  padding: 1em 0 0;
}

.main .title .intensity{
  text-align: center;
}

.main h4{
  padding: .3em 0;
}

.main .details-container .tips-container,
.main .details-container .writeup-container,
.main .details-container .muscle-groups-container
{
  padding: 0 0 .6em;
}

</style>

<section class="main">
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="<%= @exercise.video %>" frameborder="0" allowfullscreen></iframe>
  </div>
  <div class="title">
    <h1>Push Up</h1>
    <h6> <%=  @exercise.category %></h6>
    <div class="intensity">
      <h4><%=  @exercise.intensity %></h4>
      <h6>Intensity</h6>
      <h6></h6>
    </div>
  </div>
  <div class="details-container">
    <div class="tips-container">
      <h4>Tips:</h4>
      <ul class="tips-list">
        <%= @exercise.tip %>
      </ul>
    </div>
    <div class="writeup-container">
      <h4>Instructions</h4>
      <p><%= @exercise.description %></p>
    </div>
    <div class="muscle-groups-container">
      <h4>Muscle Groups</h4>
        <p>Primary:  <%= @exercise.primary %> </p>
        <p>Secondary: <%= @exercise.secondary %></p>
    </div>
    <div class="muscle-groups-container">
      <h4>Muscle Groups</h4>
        <p>Primary:  <%= @exercise.primary %> </p>
        <p>Secondary: <%= @exercise.secondary %></p>
    </div>
  </div>
</section>

